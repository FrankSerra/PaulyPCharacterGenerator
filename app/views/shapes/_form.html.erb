<%= form_with(model: shape, local: true) do |form| %>
  <% if shape.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shape.errors.count, "error") %> prohibited this shape from being saved:</h2>

      <ul>
      <% shape.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :ordering %>
    <%= form.number_field :ordering %>
    <br /><small>When building a spell name, the word order will sort numerically.</small>
  </div>

  <div class="field">
    <%= form.label 'After element' %>
    <%= form.check_box :afterelement %>
    <br /><small>Place this word after the element, rather than before.</small>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
