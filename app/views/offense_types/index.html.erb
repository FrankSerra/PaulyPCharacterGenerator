<h1>Styles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th># Weapons to Generate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offense_types.each do |offense_type| %>
      <tr>
        <td><%= offense_type.name %></td>
        <td><%= offense_type.numberofweapons %></td>
        <td><%= link_to 'Show', offense_type %></td>
        <td><%= link_to 'Edit', edit_offense_type_path(offense_type) %></td>
        <td><%= link_to 'Destroy', offense_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

